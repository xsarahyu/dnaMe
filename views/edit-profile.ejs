  <main>
    <div class="page-section">
      <div class="container">
        <div class="row justify-content-center align-items-center h-100">
          <div class="col-lg-6 mt-sm-6 wow fadeInUp text-center">
            <h2 class="title-section">Edit Profile</h2>
            <form action="/edit-profile" method="post">
              <label for="ethnicity">Ethnicity:</label>
              <input type="text" name="ethnicity" id="ethnicity" value="<%= user.ethnicity %>">
              <br>

              <label for="birthdate">Date of Birth</label>
              <input type="date" name="birthdate" id="birthdate" value="<%= user.birthdate %>">
              <br>

              <button type="submit" class="btn btn-primary rounded-pill mt-4">Save Changes</button>
            </form>

            <button type="button" class="btn btn-danger rounded-pill mt-4" id="deleteProfileButton">Delete Profile</button>
          </div>
        </div>
      </div> <!-- .container -->
    </div> <!-- .page-section -->
