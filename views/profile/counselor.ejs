<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>dnaMe</title>
  <!-- * --> <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <!-- * --> <link rel="stylesheet" href="css/profile-settings.css">
  <link rel="stylesheet" href="css/bootstrap.css">
  <link rel="stylesheet" href="css/maicons.css">
  <link rel="stylesheet" href="css/theme.css">
  <link rel="stylesheet" href="vendor/animate/animate.css">
  <link rel="stylesheet" href="vendor/owl-carousel/css/owl.carousel.css">
</head>

<body>
  <div class="back-to-top"></div>
  
  <%- include('../partials/header/counselor') %>

  <main>
    <div class="container" style="margin-top: 6rem;">
      <div class="row">
        <div class="col-12">
          <div class="my-5">
            <h3><%= counselor.firstName %>'s Profile</h3>
            <hr>
          </div>
        </div>

        <form action="/counseling/schedule" method="POST">
          <div class="row mb-5 gx-5">

            <!--Schedule -->
            <div class="col-12 col-md-6">
              <div class="bg-secondary-soft px-4 py-5 rounded mb-5">
                <div class="row g-3">
                  <h4 class="mb-4 mt-0">Set schedule</h4>
                  <!-- Monday -->
                  <div class="flex">
                    <label class="form-label">Monday</label>
                    <div>
                      <label>Start:</label><input type="time" value="" id="monStart">
                      <label>End:</label><input type="time" value="" id="monEnd">
                    </div>
                  </div>
                  <!-- Tuesday -->
                  <div class="flex">
                    <label class="form-label">Tuesday</label>
                    <div>
                      <label>Start:</label><input type="time" value="" id="tueStart">
                      <label>End:</label><input type="time" value="" id="tueEnd">
                    </div>
                  </div>
                  <!-- Wednesday -->
                  <div class="flex">
                    <label class="form-label">Wednesday</label>
                    <div>
                      <label>Start:</label><input type="time" value="" id="wedStart">
                      <label>End:</label><input type="time" value="" id="wedEnd">
                    </div>
                  </div>
                  <!-- Thursday -->
                  <div class="flex">
                    <label class="form-label">Thursday</label>
                    <div>
                      <label>Start:</label><input type="time" value="" id="thuStart">
                      <label>End:</label><input type="time" value="" id="thuEnd">
                    </div>
                  </div>
                  <!-- Friday -->
                  <div class="flex">
                    <label class="form-label">Friday</label>
                    <div>
                      <label>Start:</label><input type="time" value="" id="friStart">
                      <label>End:</label><input type="time" value="" id="friEnd">
                    </div>
                  </div>
                </div> <!-- Row END -->
              </div>
              <!-- Button -->
              <div class="gap-3 d-md-flex justify-content-md-end text-center">
                <button type="submit" id="saveScheduleBtn" class="btn btn-primary btn-lg">Save schedule</button>
              </div>
            </div>

            <!-- Appointments -->
            <div class="col-12 col-md-6">
              <div class="bg-secondary-soft px-4 py-5 rounded">
                <div class="row g-3">
                  <h4 class="mb-4 mt-0">Appointments</h4>
                  <% if (appointment && Object.values(appointment).length > 0) { %>
                    <% appointment.forEach(i => { %>
                      <span>
                        <%= (function formatDate(date) {
                          const options = {
                            weekday: 'long',
                            year: 'numeric',
                            month: 'long',
                            day: 'numeric',
                            hour: 'numeric',
                            minute: 'numeric',
                            hour12: true }
                          return date.toLocaleDateString('en-US', options)
                        })(i.start) %>
                        EST
                      </span>
                    <% }) %>
                  <% } else { %>
                    <span>No appointments yet!</span>
                  <% } %>
                </div> <!-- Row END -->
              </div>
            </div>

          </div> <!-- Row END -->
        </form>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>

  <script src="js/jquery-3.5.1.min.js"></script>
  <script src="js/bootstrap.bundle.min.js"></script>
  <script src="vendor/wow/wow.min.js"></script>
  <script src="vendor/owl-carousel/js/owl.carousel.min.js"></script>
  <script src="vendor/waypoints/jquery.waypoints.min.js"></script>
  <script src="js/theme.js"></script>
  <!-- * --> <script src="js/profile/counselor.js"></script>
  <!-- * --> <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'></script>

</body>
</html>