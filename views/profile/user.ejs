<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>dnaMe</title>
  <!-- * --> <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
  <!-- * --> <link rel="stylesheet" href="css/profile-settings.css">
  <link rel="stylesheet" href="css/bootstrap.css">
  <link rel="stylesheet" href="css/maicons.css">
  <link rel="stylesheet" href="css/theme.css">
  <link rel="stylesheet" href="vendor/animate/animate.css">
  <link rel="stylesheet" href="vendor/owl-carousel/css/owl.carousel.css">
</head>

<body>
  <div class="back-to-top"></div>
  
  <%- include('../partials/header/user') %>

  <main>
    <div class="container" style="margin-top: 6rem;">
      <div class="row">
        <div class="col-12">
          <div class="my-5">
            <h3><%= user.firstName %>'s Profile</h3>
            <hr>
          </div>
        </div>

        <!-- Form START -->
        <form>
          <div class="row mb-5 gx-5">

            <!-- Analysis results -->
            <div class="col-12 col-md-6">
              <div class="bg-secondary-soft px-4 py-5 rounded">
                <div class="row g-3">
                  <h4 class="mb-4 mt-0">Analysis Results</h4>
                  <!-- rs429358 genotype -->
                  <div class="col-md-6">
                    <label class="form-label">rs429358 genotype</label>
                    <input type="text" class="form-control" aria-label="rs429358 genotype" value="<%= analysis.rs429358Genotype %>"
                      disabled>
                  </div>
                  <!-- rs7412 genotype -->
                  <div class="col-md-6">
                    <label class="form-label">rs7412 genotype</label>
                    <input type="text" class="form-control" aria-label="rs7412 genotype" value="<%= analysis.rs7412Genotype %>"
                      disabled>
                  </div>
                  <!-- APOE alleles -->
                  <div class="col-md-6">
                    <label class="form-label">APOE alleles</label>
                    <input type="text" class="form-control" aria-label="APOE alleles" value="<%= analysis.APOE %>" disabled>
                  </div>
                  <!-- Risk -->
                  <div class="col-md-6">
                    <label class="form-label">Risk</label>
                    <input type="text" class="form-control" aria-label="Risk" value="<%= analysis.risk %>" disabled>
                  </div>
                </div> <!-- Row END -->
              </div>
            </div>

            <!-- Appointments -->
            <div class="col-12 col-md-6">
              <div class="bg-secondary-soft px-4 py-5 rounded">
                <div class="row g-3">
                  <h4 class="mb-4 mt-0">Appointments</h4>
                  <% if (appointment && Object.values(appointment).length > 0) { %>
                    <% appointment.forEach(i => { %>
                      <span>
                        <%= (function formatDate(date) {
                          const options = {
                            weekday: 'long',
                            year: 'numeric',
                            month: 'long',
                            day: 'numeric',
                            hour: 'numeric',
                            minute: 'numeric',
                            hour12: true }
                          return date.toLocaleDateString('en-US', options)
                        })(i.start) %>
                        EST
                      </span>
                    <% }) %>
                  <% } else { %>
                    <span>No appointments yet! To book one, navigate to the dropdown and select 'Genetic Counseling.'</span>
                  <% } %>
                </div> <!-- Row END -->
              </div>
            </div>

          </div> <!-- Row END -->
        </form>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>

  <script src="js/jquery-3.5.1.min.js"></script>
  <script src="js/bootstrap.bundle.min.js"></script>
  <script src="vendor/wow/wow.min.js"></script>
  <script src="vendor/owl-carousel/js/owl.carousel.min.js"></script>
  <script src="vendor/waypoints/jquery.waypoints.min.js"></script>
  <script src="js/theme.js"></script>
  <!-- * --> <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js'></script>

</body>
</html>